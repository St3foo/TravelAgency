@using TravelAgency.ViewModels.Models.LandmarkModels
@model IEnumerable<GetAllLandmarksViewModel>

@{
    ViewData["Title"] = "All Landmarks";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <form method="get" action="@Url.Action("Index")">
        <input type="text" name="search" value="@ViewBag.CurrentFilter" placeholder="Search landmarks..." class="form-control" style="width: 300px; display: inline-block;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Landmark" asp-action="Add" class="btn btn-primary">
             Add Landmark
        </a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var landmark in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(landmark.ImageUrl))
                {
                    <img src="@landmark.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@landmark.Name">
                }
                else
                {
                    <img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@landmark.Name</h5>
                    <p class="card-text">Destination: @landmark.Destination</p>
                    <p class="card-text"><small>Favorites: @landmark.FavoritesCount</small></p>
                    <div class="d-flex justify-content-between mt-auto">
                        @if (User?.Identity?.IsAuthenticated == true && !landmark.IsFavorite && !User.IsInRole("Admin"))
                        {
                            <a asp-controller="Landmark" asp-action="Details" asp-route-id="@landmark.Id" class="btn btn-info me-2 w-50">
                                 Details
                            </a>
                            <form asp-controller="Favorites" asp-action="Add" method="post" class="w-50">
                                <input type="hidden" name="id" value="@landmark.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                     Favorites
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Landmark" asp-action="Details" asp-route-id="@landmark.Id" class="btn btn-info w-100">
                                 Details
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
