@using TravelAgency.ViewModels.Models.HotelModels
@model IPagedList<GetAllHotelsViewModel>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
	ViewData["Title"] = "All Hotels";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	<form method="get" action="@Url.Action("Index", "Hotel")">
		<input type="text" name="search" value="@ViewBag.CurrentFilter" placeholder="Search hotels..." class="form-control" style="width: 300px; display: inline-block;" />
		<input type="submit" value="Search" class="btn btn-primary" />
	</form>
</div>
<hr />

<div class="row text-center">
	@foreach (var hotel in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">
				@if (!string.IsNullOrEmpty(hotel.ImageUrl))
				{
					<img src="@hotel.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@hotel.Name">
				}
				else
				{
					<img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@hotel.Name</h5>
					<p class="card-text">Destination: @hotel.Destination</p>
					<p class="card-text">City: @hotel.City</p>
					<p class="card-text">Price: @hotel.Price $ for @hotel.Nights nights</p>
					<div class="d-flex justify-content-between mt-auto">

						@if (User?.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
						{
							<a asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-info me-2 w-50">
								Details
							</a>
							<form asp-controller="Reservation" asp-action="Add" method="get" class="w-50">
								<input type="hidden" name="id" value="@hotel.Id" />
								<button type="submit" class="btn btn-success w-100">
									Reserve
								</button>
							</form>
						}
						else
						{
							<a asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-info w-100">
								Details
							</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
@{
	ViewBag.PaginationAction = "Index"; 
	ViewBag.PaginationController = "Hotel";
}

@Html.Partial("_Pagination", Model)
