@using TravelAgency.ViewModels.Models.HotelModels
@model DeleteHotelViewModel

@{
    ViewData["Title"] = "Delete Hotel";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Name" />
                }
                else
                {
                    <img src="~/images/default-image.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
                }
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.Name</strong>?
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <button type="submit" class="btn btn-danger">
                         Confirm Delete
                    </button>
                </form>
                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">
                     Cancel
                </a>
            </div>
        </div>
    </div>
</div>
