@using TravelAgency.ViewModels.Models.HotelModels
@model HotelDetailsViewModel

@{
    ViewData["Title"] = "Hotel Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 1500px;">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Title" />
        }
        else
        {
            <img src="~/images/default-image.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">City: @Model.City</p>
            <p class="card-text">Destination: @Model.Destination</p>
            <h5 class="card-title">@Model.Price $ for @Model.Nights nights</h5>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Hotel" asp-action="Index" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Hotel" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Hotel" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <a asp-controller="Hotel" asp-action="Reserve" asp-route-id="@Model.Id" class="btn btn-success d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-trash"></i> Reserve
                    </a>
                }
            </div>
        </div>
    </div>
</div>
