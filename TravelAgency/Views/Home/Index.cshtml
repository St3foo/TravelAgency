@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <img src="https://www.intercorpgrp.com/blog/wp-content/uploads/2015/07/Top-10-Holiday-Travel-Tips.png" class="img-fluid rounded shadow" alt="Travel Banner">
        <h1 class="display-4 mt-4 fw-bold text-primary">Welcome to WorldTravel!</h1>
        <h3 class="text-muted">Let’s start your journey</h3>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://wendyhainestravel.co.uk/wp-content/uploads/2021/10/banner-jpg-1024x287.jpg" class="card-img-top rounded-top" alt="Travel Around the World">
                <div class="card-body">
                    <h5 class="card-title text-primary">Travel Around the World!</h5>
                    <p class="card-text">Visit stunning destinations and explore iconic landmarks with ease.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://bynder.onthebeach.co.uk/cdn-cgi/image/width=1400,quality=70,fit=cover,format=auto,height=933/m/4a9d6c8c5f714e6/original/Xoria-Deluxe-Hotel.jpg" class="card-img-top rounded-top" alt="Luxury Hotel">
                <div class="card-body">
                    <h5 class="card-title text-primary">World's Best Hotels</h5>
                    <p class="card-text">Book your stay at luxurious and highly-rated hotels around the globe.</p>
                </div>
            </div>
        </div>
    </div>
</div>


