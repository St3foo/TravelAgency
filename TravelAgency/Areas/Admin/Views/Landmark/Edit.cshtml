@using TravelAgency.ViewModels.Models.LandmarkModels
@model LandmarkEditViewModel

@{
    ViewData["Title"] = "Edit Landmark";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Landmark Name</label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Location" class="form-label-add-edit">Located in</label>
                    <input asp-for="@Model.Location" class="form-control" type="text" />
                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.DestinationId" class="form-label-add-edit">Select Destination</label>
                <select asp-for="@Model.DestinationId" class="form-control" asp-items="@(new SelectList(Model.Destinations, "Id", "Name"))">
                    <option value="">Select Destination...</option>
                </select>
                <span asp-validation-for="@Model.DestinationId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="@Model.Id" />

            <div class="mb-2">
                <button class="btn btn-warning w-100">
                     Save
                </button>
            </div>
        </form>
    </div>
</div>
