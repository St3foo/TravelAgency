@using TravelAgency.ViewModels.Models.HotelModels
@model AddHotelViewModel

@{
    ViewData["Title"] = "Add Hotel";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Hotel Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.CityName" class="form-label-add-edit">City Name</label>
                    <input asp-for="@Model.CityName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.CityName" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.DestinationId" class="form-label-add-edit">Select Destination</label>
                    <select asp-for="@Model.DestinationId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Destinations, "Id", "Name"))">
                        <option value="">...</option>
                    </select>
                    <span asp-validation-for="@Model.DestinationId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Price" class="form-label-add-edit">Hotel Price</label>
                    <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Nights" class="form-label-add-edit">Nights stay</label>
                    <input asp-for="@Model.Nights" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Nights" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <button class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                     Save
                </button>
            </div>
        </form>
    </div>
</div>
