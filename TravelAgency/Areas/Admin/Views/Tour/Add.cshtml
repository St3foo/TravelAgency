@using TravelAgency.ViewModels.Models.DestinationModels
@model IEnumerable<AllDestinationsViewModel>

@{
    ViewData["Title"] = "Choose a destination for Tour";
}

<div class="container mt-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
        <form method="get" action="@Url.Action("Add", "Tour")" class="d-flex mt-3 mt-md-0" role="search">
            <input type="text" name="search" value="@ViewBag.CurrentFilter" class="form-control me-2" placeholder="Search destinations..." style="width: 300px;" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="row g-4">
        @foreach (var destination in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@(!string.IsNullOrEmpty(destination.ImageUrl) ? destination.ImageUrl : Url.Content("~/images/default-image.jpg"))"
                         class="card-img-top rounded-top"
                         style="object-fit: cover; max-height: 180px;"
                         alt="@destination.Name" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-semibold">@destination.Name</h5>
                        <a asp-controller="Tour" asp-action="Create" asp-route-id="@destination.Id" class="btn btn-outline-primary mt-auto">
                            Create Tour
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
